extends ../layout.pug
include ../mixins.pug

block breadcrumbs
  a.link.link-animated( href=`${ADDR_PREFIX}/` ) #{T('Home')}
  |  / 
  span #{T('Users')}

block content
  script
    include /static/scripts/cardUtils.js
  
  h1.center Contacts
  hr
  h2 Accepted
  .card-list
    each user in contacts
      .card.sheet.gap-4.align-start( onclick=`goTo('${ADDR_PREFIX}/users/${user.username}')` )
        img.userIcon( alt=user.username, src=user.gravatarLink )
        .d-flex.flex-col.grow-1
          h2.ma-0
            a.link.link-animated( href=`${ADDR_PREFIX}/users/${user.username}` ) #{user.username}
          span
            b #{T('Joined')}: 
            | #{formatDate(user.created_at)}
          span 
            b #{T('Last seen')}: 
            | #{formatDate(user.updated_at)}
  h2 Pending
  .card-list
    each user in pending
      .card.sheet.gap-4.align-start( onclick=`goTo('${ADDR_PREFIX}/users/${user.username}')` )
        img.userIcon( alt=user.username, src=user.gravatarLink )
        .d-flex.flex-col.grow-1
          h2.ma-0
            a.link.link-animated( href=`${ADDR_PREFIX}/users/${user.username}` ) #{user.username}
          span
            b #{T('Joined')}: 
            | #{formatDate(user.created_at)}
          span 
            b #{T('Last seen')}: 
            | #{formatDate(user.updated_at)}
