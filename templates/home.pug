extends layout.pug

mixin typeCard(type, color)
  .card
    a.cardLink(href=`${ADDR_PREFIX}/${type}`)
      div(style={ 'background-color': color })
        br
        h2(align='center')= capitalize(type)
        br
    br
    div
      a.cardBtn &#x2795; New
      a.cardBtn( href=`${ADDR_PREFIX}/users/${contextUser.id}/items?type=${type}` ) My #{type}


block content
  .container(style={
    width: '90%',
    margin: '0 auto',
  })
    h1(align='center') Welcome to Archivium
    br
    .cardContainer
      +typeCard('characters', '#F44336')
      +typeCard('locations', '#4CAF50')
      +typeCard('events', '#9e9e9e')
      +typeCard('archives', '#a1887f')
      +typeCard('documents', '#4d4d4d')
      +typeCard('timelines', '#64B5F6')
      +typeCard('items', '#ffc107')
